<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/blank_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/background_for_all"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cell_item_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        app:cardElevation="0dp"
        android:layout_below="@+id/blank_view"
        android:background="@drawable/selector_white_preferences_item">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_setting_name"
                android:textColor="@color/base_gray"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/right_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_select_arrow"
                android:visibility="visible" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_for_all"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
