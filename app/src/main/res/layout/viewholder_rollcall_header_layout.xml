<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlv_blank_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:id="@+id/rlv_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="学生列表"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_manager_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlv_blank_view"
        android:background="@color/color_ffffff"
        android:layout_height="50dp">

        <!--标题-->
        <TextView
            android:id="@+id/tv_cell_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="插班学员"
            android:textColor="@color/color_a0a0a0"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/iv_add_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_add"
            android:visibility="visible" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/background_for_all" />

    </RelativeLayout>

</RelativeLayout>
