<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_for_all">

    <include
        android:id="@+id/rlv_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        layout="@layout/view_base_title" />


    <RelativeLayout
        android:id="@+id/rlv_input_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rlv_title_layout"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tv_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="接收人:"
            android:textSize="15sp"/>

        <!--输入框-->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="10.0dip"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:paddingRight="8.0dip"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/tv_receiver"
            android:singleLine="true"
            android:hint="接收人联系方式"
            android:inputType="number"
            android:textColor="@color/base_gray"
            android:textColorHint="@color/color_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_msg_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:layout_below="@+id/rlv_input_layout"
        android:background="@color/color_ffffff">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="标    题:"
            android:textSize="15sp"/>

        <!--输入框-->
        <EditText
            android:id="@+id/et_newpsd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="10.0dip"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:paddingRight="8.0dip"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:hint="输入消息标题"
            android:layout_toRightOf="@+id/tv_title"
            android:textColor="@color/base_gray"
            android:textColorHint="@color/color_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_msg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="0.5dp"
        android:layout_below="@+id/rlv_msg_title_layout"
        android:background="@color/color_ffffff">


        <!--输入框-->
        <EditText
            android:id="@+id/et_msgcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:hint="输入消息标题"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:padding="12dp"
            android:minLines="4"
            android:textColor="@color/base_gray"
            android:textColorHint="@color/color_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />

    </RelativeLayout>

</RelativeLayout>
