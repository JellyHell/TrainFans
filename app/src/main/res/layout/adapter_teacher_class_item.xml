<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="0dp"
    android:layout_marginTop="10dp"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/iv_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_class_type_onemore"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_toRightOf="@+id/iv_class_type"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="8dp"
            android:text="钢琴拉不拉稀"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <RelativeLayout
            android:id="@+id/rlv_course_type"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/tv_class_name"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_course_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_class_type_class"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/iv_course_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_course_type1"
                android:background="@drawable/icon_class_type_team"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_toRightOf="@+id/rlv_course_type"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9.5dp"
            android:layout_marginLeft="4dp"
            android:text="钢琴拉不拉稀一期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_course_Cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="2/10课节"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_course_cont"
            android:layout_alignTop="@+id/tv_course_name"
            android:textColor="@color/color_a0a0a0"/>

        <TextView
            android:id="@+id/tv_student_Cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="12dp"
            android:text="8"
            android:layout_toLeftOf="@+id/tv_course_Cnt"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_students_count"
            android:layout_alignTop="@+id/tv_course_name"
            android:textColor="@color/color_a0a0a0"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
