<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="0dp"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/iv_student_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_sex_man"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_toRightOf="@+id/iv_student_sex"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="8dp"
            android:text="王大鹏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--班级-->
        <TextView
            android:id="@+id/tv_student_classs"
            android:layout_alignLeft="@+id/tv_student_name"
            android:layout_alignParentBottom="true"
            android:textColor="@color/base_gray"
            android:textSize="14sp"
            android:text="钢琴拉布拉多(班级)"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/icon_class_type_class"
            android:layout_marginBottom="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_class_time"
            android:textColor="@color/base_gray"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:text="45分钟"
            android:layout_alignTop="@+id/tv_student_classs"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/icon_course_cont"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_class_teacher"
            android:textColor="@color/base_gray"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:text="李丹丹"
            android:layout_alignTop="@+id/tv_student_classs"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/icon_man_teacher"
            android:layout_toLeftOf="@+id/tv_class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time_stamp"
            android:textColor="@color/base_gray"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:text="2016-9-03 17:29"
            android:layout_alignTop="@+id/tv_student_name"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:id="@+id/class_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/background_for_all" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
