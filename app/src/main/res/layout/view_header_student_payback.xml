<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlv_class_info"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff">

        <ImageView
            android:id="@+id/iv_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_class_type_onemore"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_toRightOf="@+id/iv_class_type"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="8dp"
            android:text="钢琴拉不拉稀"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_class_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="100/课节"
            android:textColor="@color/base_gray"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:layout_marginTop="11dp"/>

        <ImageView
            android:id="@+id/iv_class_paytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_class_name"
            android:background="@drawable/icon_class_type_class"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"/>

        <View
            android:id="@+id/class_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/iv_class_type"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_for_all" />

        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="购买:100课节"
            android:textSize="14sp"
            android:textColor="@color/base_gray"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/class_line"/>

        <TextView
            android:id="@+id/tv_use_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="已用:50课节"
            android:textSize="14sp"
            android:textColor="@color/base_gray"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tv_extend_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="赠送:0课节"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/base_gray"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/class_line"/>

        <TextView
            android:id="@+id/tv_remain_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="剩余:50课节"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_color"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rlv_class_info"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        android:layout_height="40dp">

        <!--收据单号-->
        <TextView
            android:id="@+id/tv_receive_money_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="收据编号:1234567890"/>

        <!--时间-->
        <TextView
            android:id="@+id/tv_receive_money_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="2016.10.13 11:16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/background_for_all"/>

    </RelativeLayout>

</RelativeLayout>
