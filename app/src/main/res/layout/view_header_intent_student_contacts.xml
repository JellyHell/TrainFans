<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_for_all">


    <RelativeLayout
        android:id="@+id/rlv_input_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tv_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="学生姓名"
            android:textSize="15sp"/>

        <!--输入框-->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="10.0dip"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:paddingRight="8.0dip"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/tv_receiver"
            android:singleLine="true"
            android:hint="学生姓名"
            android:gravity="right|center_vertical"
            android:textColor="@color/base_gray"
            android:textColorHint="@color/color_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_msg_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:layout_below="@+id/rlv_input_layout"
        android:background="@color/color_ffffff">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="手机号"
            android:textSize="15sp"/>

        <!--输入框-->
        <EditText
            android:id="@+id/et_newpsd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="10.0dip"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:paddingRight="8.0dip"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:hint="确保手机号可用"
            android:gravity="right|center_vertical"
            android:layout_toRightOf="@+id/tv_title"
            android:textColor="@color/base_gray"
            android:textColorHint="@color/color_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_tagtitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rlv_msg_title_layout"
        android:background="@color/color_ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="标签"
            android:textSize="15sp"/>


        <ImageView
            android:id="@+id/iv_edit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_edit"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llv_taglayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0.5dp"
        android:background="@color/color_ffffff"
        android:layout_below="@+id/rlv_tagtitle"
        android:layout_height="wrap_content">



    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/llv_taglayout"
        android:background="@color/color_ffffff"
        android:layout_marginTop="10dp">

        <!--输入框-->
        <EditText
            android:id="@+id/etv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rlv_right_view"
            android:layout_toRightOf="@+id/tv_cell_title"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="10.0dip"
            android:dropDownWidth="wrap_content"
            android:imeOptions="actionNext"
            android:padding="8.0dip"
            android:inputType="textMultiLine"
            android:hint="填写沟通记录..."
            android:textColor="@color/base_gray"
            android:textColorHint="@color/color_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />

    </RelativeLayout>
</RelativeLayout>
