<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlv_toptitle_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/top_title"
            android:text="本班学员"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_a0a0a0"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/rlv_toptitle_layout"
        android:id="@+id/rcv_top_recyclerview"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:id="@+id/rlv_topin_bt_layout"
        android:layout_below="@+id/rcv_top_recyclerview"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_out_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_out_normal"/>

        <ImageView
            android:id="@+id/iv_in_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/iv_out_img"
            android:background="@drawable/icon_in_normal"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_bottomtitle_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlv_topin_bt_layout"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/bottom_title"
            android:text="非本班学员"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_a0a0a0"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/rlv_bottomtitle_layout"
        android:id="@+id/rcv_bottom_recyclerview"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
