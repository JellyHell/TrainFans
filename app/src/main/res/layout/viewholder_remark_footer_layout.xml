<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_ffffff"
    android:layout_height="100dp">

    <!--标题-->
    <TextView
        android:id="@+id/tv_cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:text="备注"
        android:textColor="@color/base_gray"
        android:textSize="15sp" />

    <!--输入框-->
    <EditText
        android:id="@+id/etv_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_cell_title"
        android:layout_below="@+id/tv_cell_title"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        android:dropDownVerticalOffset="10.0dip"
        android:dropDownWidth="wrap_content"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:hint="选填,尽量意简言赅"
        android:textColor="@color/base_gray"
        android:textColorHint="@color/color_a0a0a0"
        android:textCursorDrawable="@null"
        android:textSize="15.0sp" />

</RelativeLayout>
