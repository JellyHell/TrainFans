<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <!--正常信息输入-->
    <RelativeLayout
        android:id="@+id/rlv_setting_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_ffffff">

        <!--标题-->
        <TextView
            android:id="@+id/tv_cell_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="姓名"
            android:textColor="@color/base_gray"
            android:textSize="15sp" />


        <!--右侧箭头或者学员列表选择按钮-->
        <RelativeLayout
            android:id="@+id/rlv_right_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_select_arrow"
                android:visibility="gone" />

            <TextView
                android:id="@+id/iv_student_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="学员列表"
                android:textColor="@color/main_color"
                android:textSize="15sp"
                android:visibility="gone" />

        </RelativeLayout>

        <!--输入框-->
        <EditText
            android:id="@+id/etv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rlv_right_view"
            android:layout_toRightOf="@+id/tv_cell_title"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="10.0dip"
            android:dropDownWidth="wrap_content"
            android:gravity="right"
            android:imeOptions="actionNext"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:singleLine="true"
            android:textColor="@color/base_gray"
            android:textColorHint="@color/color_a0a0a0"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />


        <TextView
            android:id="@+id/tv_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/tv_cell_title"
            android:gravity="right"
            android:visibility="gone"
            android:textColor="@color/base_gray"
            android:textSize="15sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/background_for_all" />
    </RelativeLayout>

    <!--课程信息输入-->
    <RelativeLayout
        android:id="@+id/rlv_class_info"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:visibility="gone"
        android:background="@color/color_ffffff">

        <ImageView
            android:id="@+id/iv_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_toRightOf="@+id/iv_class_type"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_class_detail_info"
            android:layout_alignLeft="@+id/tv_class_name"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_a0a0a0"
            android:textSize="13sp"
            android:layout_marginBottom="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/right_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_select_arrow"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_class_money"
            android:layout_toLeftOf="@+id/right_iv_arrow"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            android:text="200"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/class_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/background_for_all" />

    </RelativeLayout>
</RelativeLayout>
