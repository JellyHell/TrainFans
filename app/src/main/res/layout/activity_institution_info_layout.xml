<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_for_all">

    <include
        android:id="@+id/rlv_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        layout="@layout/view_base_title" />


    <RelativeLayout
        android:id="@+id/rlv_input_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rlv_title_layout"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tv_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="机构LOGO"
            android:textSize="15sp"/>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:roundedCornerRadius="5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/arrow0"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@color/color_ffffff" />

        <ImageView
            android:id="@+id/arrow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_select_arrow"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_for_all"
            android:layout_marginLeft="12dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_msg_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_input_layout"
        android:background="@color/color_ffffff">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="机构名称"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_centerVertical="true"
            android:text="大众音乐"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/arrow1"
            android:textColor="@color/color_a0a0a0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_select_arrow"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_for_all"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_mobile_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_msg_title_layout"
        android:background="@color/color_ffffff">


        <TextView
            android:id="@+id/tv_mobile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="联系电话"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_centerVertical="true"
            android:text="18811778682"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/arrow2"
            android:textColor="@color/color_a0a0a0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_select_arrow"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_for_all"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_address_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_mobile_layout"
        android:background="@color/color_ffffff">


        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="详细地址"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_centerVertical="true"
            android:text="北京市东程序富华大厦F座11层京金所"
            android:singleLine="true"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="80dp"
            android:layout_toLeftOf="@+id/arrow3"
            android:textColor="@color/color_a0a0a0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_select_arrow"/>


    </RelativeLayout>

</RelativeLayout>
