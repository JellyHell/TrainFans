<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlv_normal_info"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:text="信息"
            android:textColor="@color/base_gray"
            android:textSize="15sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_section_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_for_all">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:background="@color/color_ffffff">


            <RelativeLayout
                android:id="@+id/rlv_left_title"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_left_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/main_color"/>

                <TextView
                    android:id="@+id/tv_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/main_color"
                    android:text="以个人身份认证"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlv_right_title"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_right_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/color_ffffff"/>

                <TextView
                    android:id="@+id/tv_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/base_gray"
                    android:text="以企业身份认证"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
