<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    app:cardElevation="0dp"
    android:background="@color/color_ffffff"
    android:layout_marginLeft="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上周数据统计"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/iv_message_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_message_title"
                android:layout_marginLeft="8dp"
                android:background="@drawable/icon_message_type_money"/>

            <TextView
                android:id="@+id/tv_message_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:text="2016.11.21"
                android:layout_marginRight="8dp"
                android:textColor="@color/base_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_for_all"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="8dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_below="@+id/rlv_message_title"
            android:text="王大炮老师，您好！\n上周教学数据统计:\n点名次数：20次\n课酬：2000.00元"
            android:textColor="@color/base_gray"/>


        <RelativeLayout
            android:id="@+id/rlv_extend_info"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_message_content"
            android:layout_height="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/background_for_all"/>

            <TextView
                android:id="@+id/tv_extend_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="感谢您坚持使用【培训范】管理您的机构"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"/>

        </RelativeLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>
