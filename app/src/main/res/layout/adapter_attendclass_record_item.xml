<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:clickable="true"
    app:cardElevation="0dp"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_class_type_onemore"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_toRightOf="@+id/iv_class_type"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="8dp"
            android:text="钢琴拉不拉稀"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_class_paytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_class_name"
            android:background="@drawable/icon_class_type_class"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"/>

        <View
            android:id="@+id/class_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/iv_class_type"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_for_all" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/class_line"
            android:layout_height="65dp">

            <ImageView
                android:id="@+id/iv_class_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_class"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_studyclass_name"
                android:layout_toRightOf="@+id/iv_class_icon"
                android:textColor="@color/base_gray"
                android:textSize="15sp"
                android:layout_marginTop="9.5dp"
                android:layout_marginLeft="8dp"
                android:text="钢琴拉布拉多"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_student_headericon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="11dp"
                android:background="@drawable/icon_man_teacher"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/iv_student_headericon"
                android:textColor="@color/base_gray"
                android:textSize="13sp"
                android:text="张三，李四"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_attend_time"
                android:layout_alignParentBottom="true"
                android:textColor="@color/base_gray"
                android:textSize="13sp"
                android:text="2016.11.4 14:00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_alignTop="@+id/tv_studyclass_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_class_length"
                android:layout_alignParentBottom="true"
                android:textColor="@color/base_gray"
                android:textSize="13sp"
                android:text="授课：45分钟"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_alignTop="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>
