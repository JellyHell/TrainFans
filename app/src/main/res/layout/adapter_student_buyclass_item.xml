<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="0dp"
    android:layout_marginTop="10dp"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/iv_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_class_type_onemore"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_toRightOf="@+id/iv_class_type"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="8dp"
            android:text="钢琴拉不拉稀"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_class_paytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_class_name"
            android:background="@drawable/icon_class_type_class"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/tv_receive_money_no"
            android:layout_alignLeft="@+id/tv_class_name"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_a0a0a0"
            android:textSize="13sp"
            android:text="收据编号:1234567890"
            android:layout_marginBottom="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_alignTop="@+id/tv_class_name"
            android:layout_marginTop="2dp"
            android:text="2016.9.20"
            android:textColor="@color/color_a0a0a0"/>

        <TextView
            android:id="@+id/tv_moneyCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="12000"
            android:layout_alignTop="@+id/tv_receive_money_no"
            android:textColor="@color/color_a0a0a0"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
