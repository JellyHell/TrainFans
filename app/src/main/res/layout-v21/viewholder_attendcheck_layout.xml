<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardElevation="0dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/iv_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_class_type_team"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_toRightOf="@+id/iv_class_type"
            android:textColor="@color/base_gray"
            android:textSize="15sp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="8dp"
            android:text="钢琴拉不拉稀(班级)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_teach_time"
            android:layout_alignLeft="@+id/tv_class_name"
            android:textColor="@color/base_gray"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9.5dp"
            android:text="45分钟"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_course_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_student_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:text="2/10"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/icon_students_count"
            android:layout_alignTop="@+id/tv_teach_time"
            android:textColor="@color/base_gray"/>

        <TextView
            android:id="@+id/tv_student_Cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="12dp"
            android:text="¥280"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_teach_time"
            android:textColor="@color/main_color"/>


        <TextView
            android:id="@+id/tv_times_Cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="12dp"
            android:text="12:00"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_class_name"
            android:textColor="@color/color_a0a0a0"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/background_for_all" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
